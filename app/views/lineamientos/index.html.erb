<p id="notice"><%= notice %></p>

<h1>Listing Lineamientos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lineamientos.each do |lineamiento| %>
      <tr>
        <td><%= lineamiento.nombre %></td>
        <td><%= link_to 'Show', lineamiento %></td>
        <td><%= link_to 'Edit', edit_lineamiento_path(lineamiento) %></td>
        <td><%= link_to 'Destroy', lineamiento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lineamiento', new_lineamiento_path %>
